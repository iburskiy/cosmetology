{
  "name": "cosmetology",
  "version": "1.0.0",
  "watch": {
    "watch:scss": "styles.scss",
    "watch:html": "index.html",
    "watch:images": {
        "patterns": [
          "images"
        ],
        "extensions": "jpg,jpeg,png"
      }
    },
  "scripts": {
    "build": "npm run copy && npm run scss",
    "scss": "sass --embed-sources styles.scss dist/styles.css",
    "copy": "cp -r images dist/ && cp index.html dist/",
    "watch": "npm-watch",
    "watch:scss": "npm run scss",
    "watch:html": "cp index.html dist/",
    "watch:images": "cp -r ./images dist/"
  },
  "devDependencies": {
    "sass": "^1.57.1"
  },
  "dependencies": {
    "npm-watch": "^0.11.0"
  }
}
